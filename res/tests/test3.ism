use html;

store {
    let counter = 0;

    counter {
        action increment => value + 1;
        action decrement => value - 1;
    }
}

component counter {
    h4 { ("Counter: " + counter) }
    p (class="actions") {
        a (href="#decrement") click || { dispatch decrement; } {( "Decrement" )}
        (" | ")
        a (href="#increment") click || { dispatch increment; } {( "Increment" )}
    }
}

counter (get counter) {}