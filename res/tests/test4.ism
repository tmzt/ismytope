use html;

store {
    let lines = ["The first hello."];

    lines {
        action add => value + "Hello!";
    }
}

component greeter {
    for line in lines { p { ("Message: " + line) } }
    p (class="actions") {
        a (href="#add") click || { dispatch add; } { "Say Hello" }
    }
}

greeter (get lines) {}